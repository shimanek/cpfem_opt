#PBS -l nodes=1:ppn=1
#PBS -l walltime=00:20:00
#PBS -A open
#PBS -l pmem=1gb
#PBS -j oe
#PBS -m ae
SECONDS=0
pwd
cd $PBS_O_WORKDIR
echo " "
echo "Job started on `hostname` at `date`"
echo " "
echo "Running program..."
module load python
python runner.py
echo " "
echo "Job completed at `date`"
echo " "
diff=$SECONDS
echo "$(($diff / 3600)) hours, $((($diff / 60) % 60)) minutes and $(($diff % 60)) seconds elapsed."
